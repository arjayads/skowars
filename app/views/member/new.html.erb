<% provide(:title, 'Sign-up') %>
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-4">
      </div>
      <div class="col-md-4">
        <div class="row"><div class="col-md-12"><h1>Signup as <%= @member.category  %></h1></div></div>
        <% if @member.errors.any? %>
            <div class="row">
              <div class="alert alert-danger" >
                  <ul>
                  <% @member.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                  </ul>
              </div>
            </div>
        <% end %>
        <%= form_tag('/member', authenticity_token: true) %>
          <input type="hidden" name="member[category]" value="<%= @member.category %>">
          <div class="form-group">
            <label for="first_name">First name <%= @member.category == 'Sponsor' ? '/ Organization name' : '' %></label>
            <input type="text" class="form-control" id="first_name" name="member[first_name]" value="<%= @member.first_name %>" placeholder="First name">
          </div>
          <div class="form-group">
            <label for="last_name">Last name</label>
            <input type="text" class="form-control" id="last_name" name="member[last_name]" value="<%= @member.last_name %>" placeholder="Last name">
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" name="member[email]" value="<%= @member.email %>" placeholder="Email">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="member[password]"  value="<%= @member.password %>" placeholder="Password">
          </div>
          <div class="form-group">
            <label for="confirm_password">Confirm Password</label>
            <input type="password" class="form-control" id="confirm_password" name="member[password_confirmation]"  value="<%= @member.password_confirmation %>" placeholder="Confirm password">
          </div>
        <div class="form-group">
          <%= radio_button_tag 'member[gender]', "Female", @member.gender == "Female" %><label style="margin-right: 20px; cursor: pointer" for="member_gender_Female">&nbsp;&nbsp;Female</label>
          <%= radio_button_tag 'member[gender]', "Male", @member.gender == "Male" %><label style="cursor: pointer" for="member_gender_Male">&nbsp;&nbsp;Male</label>
        </span>
        </div>
        <div class="text-center"><button type="submit" class="btn btn-secondary">Submit</button></div>
        </form>
      </div>
      <div class="col-md-4">
      </div>
    </div>
  </div>
</div>