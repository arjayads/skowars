<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-4">
      </div>
      <div class="col-md-4">
        <div class="row"><div class="col-md-12"><h1>Sign-in using your account</h1></div></div>
        <% if flash[:danger]  %>
            <div class="row">
              <div class="alert alert-danger" >
                <%= flash[:danger]  %>
              </div>
            </div>
        <% end %>
        <%= form_tag('/signin', authenticity_token: true) %>
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" id="email" name="session[email]" placeholder="Email">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" name="session[password]"  placeholder="Password">
        </div>
        <button type="submit" class="btn btn-default">
          Submit
        </button>
        </form>
      </div>
      <div class="col-md-4">
      </div>
    </div>
  </div>
</div>