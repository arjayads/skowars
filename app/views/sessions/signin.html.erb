<% provide(:title, 'Sign-in') %>
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-4">
      </div>
      <div class="col-md-4">
        <div class="row"><div class="col-md-12"><h1>Sign-in using your account</h1></div></div>
        <%= form_tag('/signin', authenticity_token: true) %>
        <% if flash[:danger]  %>
            <div class="row">
              <div class="alert alert-danger" >
                <%= flash[:danger]  %>
              </div>
            </div>
        <% end %>
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" id="email" name="session[email]" placeholder="Email">
        </div>
        <div class="form-group">
          <label for="password">Password</label>&nbsp;&nbsp;<%= link_to '(forgot password)', password_resets_new_path %>
          <input type="password" class="form-control" id="password" name="session[password]"  placeholder="Password">
        </div>
        <div class="form-group">
          <%= check_box_tag 'session[remember_me]', '1' %><label style="margin-right: 20px; cursor: pointer" for="session_remember_me">&nbsp;&nbsp;Remember me on this computer</label>
        </div>
        <div class="text-center"><button type="submit" class="btn btn-secondary">Submit</button></div>
        </form>
      </div>
      <div class="col-md-4">
      </div>
    </div>
  </div>
</div>